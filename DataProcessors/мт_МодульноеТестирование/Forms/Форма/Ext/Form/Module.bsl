							?(ЗначениеЗаполнено(ВыборкаТесты.Уточнение), "(" + ВыборкаТесты.Уточнение + ")", "");
						СтрокаТеста.КартинкаРезультата = ВыборкаТесты.КартинкаРезультата;
						СтрокаТеста.ДатаВыполнения = ВыборкаТесты.ДатаВыполнения;
						СтрокаТеста.ПредставлениеДлительности =
